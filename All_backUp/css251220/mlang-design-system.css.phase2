@media (max-width: 1024px) {
    .leaflet-grid,
    .namecard-grid,
    .msticker-grid,
    .cadarok-grid,
    .envelope-grid,
    .merchandisebond-grid,
    .ncrflambeau-grid,
    .poster-grid,
    .sticker-grid,
    [class$="-grid"] {
        grid-template-columns: 1fr;
        gap: 25px;
        max-width: 100%;
    }
    
    .options-grid,
    .form-grid-compact {
        grid-template-columns: 1fr;
        gap: 12px;
    }
}

@media (max-width: 768px) {
    .leaflet-card,
    .namecard-card,
    .msticker-card,
    .cadarok-card,
    .envelope-card,
    .merchandisebond-card,
    .ncrflambeau-card,
    .poster-card,
    .sticker-card,
    [class$="-card"] {
        padding: 15px;
        border-radius: 10px;
    }
    
    .leaflet-gallery,
    .namecard-gallery,
    .msticker-gallery,
    .cadarok-gallery,
    .envelope-gallery,
    .merchandisebond-gallery,
    .ncrflambeau-gallery,
    .poster-gallery,
    .sticker-gallery,
    [class$="-gallery"],
    .calculator-section {
        padding: 20px;
        border-radius: 10px;
    }
    
    .price-amount {
        font-size: 1.6rem;
    }
    
    .upload-container {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .modal-content {
        margin: 10px;
        max-width: calc(100vw - 20px);
    }
    
    .modal-footer {
        flex-direction: column;
        gap: 16px;
        align-items: stretch;
    }
}

@media (max-width: 480px) {
    .leaflet-grid,
    [class$="-grid"] {
        gap: 20px;
    }
    
    .options-grid,
    .form-grid-compact {
        gap: 10px;
    }
    
    .option-select {
        padding: 10px 12px;
        font-size: 0.85rem;
    }
    
    .price-display {
        padding: 15px;
    }
    
    .btn-upload-order {
        padding: 12px 20px;
        font-size: 1rem;
    }
}

