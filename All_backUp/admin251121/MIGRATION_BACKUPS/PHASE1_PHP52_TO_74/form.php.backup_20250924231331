var NUM = "0123456789"; 
var SALPHA = "abcdefghijklmnopqrstuvwxyz";
var ALPHA = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"+SALPHA;

////////////////////////////////////////////////////////////////////////////////
function TypeCheck (s, spc) {
var i;

for(i=0; i< s.length; i++) {
if (spc.indexOf(s.substring(i, i+1)) < 0) {
return false;
}
}        
return true;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////

function JoinCheckField()
{
var f=document.JoinInfo;
<?if($mode=="modify"){}else{?>
if (f.PhotoFileSo.value == "") {
alert("작은사진을 입력해 주세요. ");
f.PhotoFileSo.focus();
return false;
}
if((f.PhotoFileSo.value.lastIndexOf(".jpg")==-1) && (f.PhotoFileSo.value.lastIndexOf(".gif")==-1))
{
alert("작은사진 자료등록은 JPG 와 GIF 파일만 하실수 있습니다.");
f.PhotoFileSo.focus();
return false
}

if (f.PhotoFileBig.value == "") {
alert("큰사진을 입력해 주세요. ");
f.PhotoFileBig.focus();
return false;
}
if((f.PhotoFileBig.value.lastIndexOf(".jpg")==-1) && (f.PhotoFileBig.value.lastIndexOf(".gif")==-1))
{
alert("큰사진 자료등록은 JPG 와 GIF 파일만 하실수 있습니다.");
f.PhotoFileBig.focus();
return false
}
<?}?>

if (f.name.value == "") {
alert("이름을 입력해 주세요. ");
f.name.focus();
return false;
}

if (f.nala.value == "0") {
alert("국가을 선택해 주세요. ");
f.nala.focus();
return false;
}

if (f.zip1.value == "") {
alert("출생지 을 입력해 주세요. ");
f.zip1.focus();
return false;
}

if (f.zip2.value == "") {
alert("현주소 을 입력해 주세요. ");
f.zip2.focus();
return false;
}

if (f.school.value == "") {
alert("최종학교 을 입력해 주세요. ");
f.school.focus();
return false;
}

if (f.job.value == "") {
alert("현재직업 을 입력해 주세요. ");
f.job.focus();
return false;
}

if (f.cm.value == "") {
alert("키 를 입력해 주세요. ");
f.cm.focus();
return false;
}
if (!TypeCheck(f.cm.value, NUM)) {
alert("키 은 숫자로만 적으셔야 합니다.");
f.cm.focus();
return false;
}

if (f.kg.value == "") {
alert("몸무게 를 입력해 주세요. ");
f.kg.focus();
return false;
}
if (!TypeCheck(f.kg.value, NUM)) {
alert("몸무게 은 숫자로만 적으셔야 합니다.");
f.kg.focus();
return false;
}

if (f.religion.value == "0") {
alert("종교 를 선택해 주세요. ");
f.religion.focus();
return false;
}


if (f.taste.value == "") {
alert("취미 을 입력해 주세요. ");
f.taste.focus();
return false;
}

if (f.special.value == "") {
alert("특기 을 입력해 주세요. ");
f.special.focus();
return false;
}

if (f.iii_1.value == "#") {
alert("형제관계-몇 [남] 을 선택해 주세요..");
f.iii_1.focus();
return false;
}
if (f.iii_2.value == "#") {
alert("형제관계-몇 [녀] 을 선택해 주세요..");
f.iii_2.focus();
return false;
}
if (f.iii_3.value == "#") {
alert("형제관계-몇 [째] 선택해 주세요..");
f.iii_3.focus();
return false;
}


}

//////////////// 이미지 미리보기 //////////////////////////////////
/* 소스제작: http://www.script.ne.kr - Mlang */
function Mlamg_imageSo(image) {

Mlangwindow = window.open("", "Image_Mlang", "toolbar=0,location=0,directories=0,status=0,menubar=0,scrollbars=1,resizable=1,copyhistory=0,width=600,height=400,top=0,left=0");
Mlangwindow.document.open();
Mlangwindow.document.write("<html><head><title>이미지 미리보기</title></head>");
Mlangwindow.document.write("<body>");
Mlangwindow.document.write("<p align=center><a href=\"#\" onClick=\"javascript:window.close();\"><img src=\"" + image + "\" border=\"0\"></a></p>");
Mlangwindow.document.write("<p align=center><INPUT TYPE='button' VALUE='윈도우 닫기' " + "onClick='window.close()'></p>");
Mlangwindow.document.write("</body></html>");
Mlangwindow.document.close();
  
}
function Mlamg_imageBig(image) {

Mlangwindow = window.open("", "Image_Mlang", "toolbar=0,location=0,directories=0,status=0,menubar=0,scrollbars=1,resizable=1,copyhistory=0,width=600,height=400,top=0,left=0");
Mlangwindow.document.open();
Mlangwindow.document.write("<html><head><title>이미지 미리보기</title></head>");
Mlangwindow.document.write("<body>");
Mlangwindow.document.write("<p align=center><a href=\"#\" onClick=\"javascript:window.close();\"><img src=\"" + image + "\" border=\"0\"></a></p>");
Mlangwindow.document.write("<p align=center><INPUT TYPE='button' VALUE='윈도우 닫기' " + "onClick='window.close()'></p>");
Mlangwindow.document.write("</body></html>");
Mlangwindow.document.close();
  
}
