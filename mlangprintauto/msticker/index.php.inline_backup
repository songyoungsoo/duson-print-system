            // ê¸°ë³¸ ì¥ë°”êµ¬ë‹ˆ ì¶”ê°€ í•¨ìˆ˜ í˜¸ì¶œ
            if (typeof addToBasket === 'function') {
                addToBasket();
            } else {
                console.error('ìì„ìŠ¤í‹°ì»¤: addToBasket í•¨ìˆ˜ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                alert('ì£„ì†¡í•©ë‹ˆë‹¤. ì ì‹œ í›„ ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.');
